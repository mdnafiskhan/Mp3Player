<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#cccccc</item>
        <item name="colorPrimaryDark">#191919</item>
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:colorBackground">#000000</item>
    </style>

    <style name="AppTheme2" parent="android:Theme.Holo.Light.Dialog">
        <item name="colorPrimary">#cccccc</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

    <style name="AlbumTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:textColorPrimary">#00D1C4E9</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>


        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogStyle" parent="android:Theme.DeviceDefault.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFFFFF</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="colorPrimary">#666666</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:colorForeground">#AAAAAA</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">#cccccc</item>
        <item name="overlapAnchor">true</item>
        <item name="background">@drawable/spinner_background</item>
    </style>

    <style name="Theme.AlbumTheme.Light.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar" />

    <style name="SettingTheme" parent="android:Theme.Material.Light.DarkActionBar" >
        <item name="android:colorAccent">#162825</item>
        <item name="android:colorForeground">#fcf8e0</item>
        <item name="android:navigationBarColor">#000005</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:colorPrimary">#111e1c</item>
        <item name="android:colorPrimaryDark">#000005</item>
        <item name="android:textColorPrimary">#dddddd</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


</resources>
