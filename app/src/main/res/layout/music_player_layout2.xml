<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gesture-image="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    >
    <ImageView
        android:layout_width="0dp"
        android:id="@+id/backimage"
        android:scaleType="centerCrop"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#bb000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:alpha="0.6"
        android:id="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:animateLayoutChanges="true"
        app:layout_constraintHorizontal_bias="0.0">
     <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:id="@+id/songtitle"
         android:focusable="true"
         android:focusableInTouchMode="true"
         android:singleLine="true"
         android:scrollHorizontally="true"
         android:ellipsize="end"
         android:marqueeRepeatLimit ="marquee_forever"
         android:textColor="#ffffff"
         android:maxLines="1"
         android:padding="8dp"
         android:layout_marginLeft="8dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_marginBottom="8dp"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_marginTop="8dp"
         app:layout_constraintRight_toLeftOf="@+id/guideline3"
         android:layout_marginRight="8dp"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp" />
        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="60dp"
            gesture-image:layout_editor_absoluteY="0dp"
            gesture-image:layout_editor_absoluteX="300dp" />
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/playlist"
            android:layout_marginRight="8dp"
            android:id="@+id/showPlaylist"
            android:padding="3dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
    </android.support.constraint.ConstraintLayout>

<android.support.constraint.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#55191818"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/constraintLayout2"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/constraintLayout3">
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"
        gesture-image:layout_editor_absoluteY="0dp"
        gesture-image:layout_editor_absoluteX="60dp" />
    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="50dp"
        gesture-image:layout_editor_absoluteY="240dp"
        gesture-image:layout_editor_absoluteX="0dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/heding"
        android:textColor="#cccccc"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="Half girlfriend"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/songalbum_andartist" />

    <TextView
        android:id="@+id/songalbum_andartist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Arijit singh"
        android:textColor="#aaaaaa"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/heding"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/share"
        android:src="@mipmap/share"
        android:padding="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/PlayingSongImage"
        android:layout_marginRight="8dp" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/equaliser"
        android:padding="3dp"
        android:src="@mipmap/equalizer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/share" />




    <com.like.LikeButton
        app:icon_type="Heart"
        android:id="@+id/star_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_start_color="@color/colorPrimary"
        app:like_drawable="@drawable/like"
        app:unlike_drawable="@drawable/unlike"
        app:dots_primary_color="#ffffff"
        app:dots_secondary_color="#000000"
        app:circle_end_color="#ff00dc"
        app:icon_size="20dp"
        app:anim_scale_factor="4"
        app:is_enabled="true"
        app:liked="false"
        android:onClick="liked"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
   <LinearLayout
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:background="#000000"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"
       android:layout_marginRight="1dp"
       app:layout_constraintBottom_toTopOf="@+id/guideline2"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintLeft_toLeftOf="@+id/guideline"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.0"
       android:layout_marginEnd="1dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PlayingSongImage"
        android:transitionName="zoom"
        android:scaleType="centerCrop"
        />
   </LinearLayout>
