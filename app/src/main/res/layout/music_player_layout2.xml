<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gesture-image="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:elevation="20dp"
        android:layout_height="45dp">
        </android.support.constraint.ConstraintLayout>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7">

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp"
        android:id="@+id/cardView"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.13"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/albumart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@mipmap/art"
            gesture-image:layout_editor_absoluteX="8dp"
            gesture-image:layout_editor_absoluteY="8dp" />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/heding"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Half girlfriend"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/songalbum_andartist"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/songalbum_andartist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Arijit singh"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="4dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginStart="8dp"
        gesture-image:layout_editor_absoluteY="142dp"
        gesture-image:layout_editor_absoluteX="302dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="4dp"
        app:srcCompat="@mipmap/like"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cardView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.75" />

</android.support.constraint.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="00:00"
            android:id="@+id/currtime"
            android:textSize="8sp"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:layout_above="@+id/seek"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:id="@+id/totaltime"
            android:text="00:00"
            android:textSize="8sp"
            android:textColor="#ffffff"
            android:layout_above="@+id/seek"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/seek"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/controls"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/controls"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="60dp"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_height="60dp"
                android:id="@+id/next"
                android:background="#00000000"
                android:padding="4dp"
                android:src="@android:drawable/ic_media_next"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/play"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="goo"
                android:scaleType="fitCenter"
                android:id="@+id/play"
                android:padding="4dp"
                android:background="#00000000"
                android:src="@android:drawable/ic_media_play"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:id="@+id/prev"
                android:background="#00000000"
                android:padding="4dp"
                android:src="@android:drawable/ic_media_previous"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toLeftOf="@+id/play"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/repeat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/ic_menu_revert"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_menu_send"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp" />
        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>
</LinearLayout>