</android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/constraintLayout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="00:00"
            android:id="@+id/currtime"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#a09d9d"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seek"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:id="@+id/totaltime"
            android:text="00:00"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textColor="#a09d9d"
            android:layout_above="@+id/seek"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seek" />

        <SeekBar
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:id="@+id/seek"
            android:progressDrawable="@drawable/pd"
            android:thumb="@drawable/thumb_seekbar"
            android:layout_above="@+id/controls"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/controls"
            app:layout_constraintVertical_bias="0.6" />
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/controls"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="60dp"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_height="60dp"
                android:id="@+id/next"
                android:background="#00000000"
                android:padding="18dp"
                android:src="@mipmap/next"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/play"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="goo"
                android:scaleType="fitCenter"
                android:id="@+id/play"
                android:padding="6dp"
                android:elevation="20dp"
                android:background="#00000000"
                android:src="@mipmap/playbutton"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:id="@+id/prev"
                android:background="#00000000"
                android:padding="18dp"
                android:src="@mipmap/back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintRight_toLeftOf="@+id/play"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/repeat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/repeat"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                android:padding="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/shuffleoff"
                android:padding="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp" />
        </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>