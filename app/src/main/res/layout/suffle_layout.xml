<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/shuffleCons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/shuffle2"
        android:id="@+id/imageView2"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/shuffle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:text="Shuffle Play"
        android:textAllCaps="false"
        android:textColor="#cccccc"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/alltracks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/shuffle"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:gravity="left"
        android:text="All Tracks"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:textColor="#aaaaaa"
        app:layout_constraintTop_toBottomOf="@+id/shuffle"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/optionButton"
        android:src="@drawable/option"
        android:padding="4dp"
        android:background="#00000000"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>